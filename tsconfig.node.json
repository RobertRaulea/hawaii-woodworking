{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // Not compatible with emitting JS
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // We want to emit JS files for our scripts
    "outDir": "./dist-scripts",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-scripts", "scripts/seedStripe.ts"]
}
